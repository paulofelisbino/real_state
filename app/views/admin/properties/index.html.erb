<%
  content_for :stylesheet do
    stylesheet_link_tag 'dataTables.bootstrap4.min', media: 'all', 'data-turbolinks-track': 'reload'
  end
%>

<%
  content_for :javascript do
    javascript_include_tag 'datatables.js'
  end
%>

<div class="d-sm-flex align-items-center justify-content-between">
  <div class="d-sm-flex flex-column align-items-left justify-content-between">
    <h1 class="h3 mb-0 text-gray-800"><%= t('property.index.title') %></h1>
    <%= @indexPresenter.subtitle %>
  </div>

  <a
    href="<%= new_admin_property_path %>"
    class="d-none d-sm-inline-block btn btn-primary shadow-sm"
  >
    <i class="fas fa-plus-circle fa-sm text-white-50"></i>
    <%= t('actions.new') %>
  </a>
</div>

<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        data-source="<%= @indexPresenter.datatable_source %>"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th><%= t('activerecord.attributes.property.reference') %></th>
            <th><%= t('property.index.table.property_type') %></th>
            <th><%= t('activerecord.attributes.property.price') %></th>
            <th></th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th><%= t('activerecord.attributes.property.reference') %></th>
            <th><%= t('property.index.table.property_type') %></th>
            <th><%= t('activerecord.attributes.property.price') %></th>
            <th></th>
          </tr>
        </tfoot>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>
