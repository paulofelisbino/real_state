<%
  content_for :javascript do
    javascript_include_tag 'forms/forms.js'
  end
%>

<%= simple_form_for([:admin, property],
        wrapper: :floating_labels_form,
        wrapper_mappings: { select: :floating_labels_select }) do |f| %>

  <%= f.error_notification %>

  <%= f.input :category, collection: PropertyDecorator::CATEGORY_MAPPING, label_method: :last, value_method: :first, include_blank: false %>
  <%= f.association :property_type, include_blank: false %>

  <%= f.input :reference, placeholder: t('simple_form.placeholders.property.reference') %>
  <%= f.input :title, placeholder: t('simple_form.placeholders.property.title') %>

  <%= f.simple_fields_for(:address,
        wrapper: :floating_labels_form,
        wrapper_mappings: { select: :floating_labels_select }) do |fa| %>

    <%= render 'admin/addresses/nested_form', f: fa %>
  <% end%>

  <%= f.input :price, input_html: { class: 'currency-mask' }, placeholder: t('simple_form.placeholders.property.price') %>
  <%= f.input :size, placeholder: t('simple_form.placeholders.property.size') %>
  <%= f.input :rooms, placeholder: t('simple_form.placeholders.property.rooms') %>
  <%= f.input :bathrooms, placeholder: t('simple_form.placeholders.property.bathrooms') %>
  <%= f.input :parking_space, placeholder: t('simple_form.placeholders.property.parking_space') %>

  <%= f.input :furniture, wrapper: :custom_boolean_switch %>
  <%= f.input :pet_friendly, wrapper: :custom_boolean_switch  %>

  <%= f.input :description, placeholder: t('simple_form.placeholders.property.description') %>

  <div class="d-sm-flex justify-content-end mb-4">
    <%= f.button :submit, class: "btn-primary" %>
  </div>
<% end %>
